(
    movingWall
    {
        type wall;
        faces
        (
            (2 6 5 1)
        );
    }
    fixedWalls
    {
        type wall;
        faces
        (
            (0 4 7 3)
            (3 7 6 2)
            (1 5 4 0)
        );
    }
    frontAndBack
    {
        type wall;
        faces
